<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.fess.labelled.TestActivity"
        tools:ignore="MergeRootFrame">

    <com.fess.labelled.LabelledEditText
            android:id="@+id/test_single_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            custom:lines="1"
            custom:label="@string/test_single_line_text"/>

    <com.fess.labelled.LabelledEditText
            android:id="@+id/test_multiline"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            custom:lines="3"
            custom:label="@string/test_multiline_text"/>

</LinearLayout>
